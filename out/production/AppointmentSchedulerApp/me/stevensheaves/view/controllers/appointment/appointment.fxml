<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import me.stevensheaves.custom.controls.TextFieldLimited?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="me.stevensheaves.view.controllers.appointment.AppointmentController"
            fx:id="appointmentPane"
            prefHeight="850.0" prefWidth="1100">
    <top>
        <HBox spacing="100" alignment="CENTER">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10" bottom="10"/>
                </padding>
                <Button text="Dashboard" fx:id="dashboardButton" onAction="#changeScene"/>
                <Button text="Appointments" fx:id="appointmentsButton" onAction="#changeScene" disable="true"/>
                <Button text="Customers" fx:id="customersButton" onAction="#changeScene"/>
                <Button text="Contacts" fx:id="contactsButton" onAction="#changeScene"/>
                <Button text="Reports" fx:id="reportsButton" onAction="#changeScene"/>
            </HBox>
            <HBox alignment="CENTER_RIGHT">
                <Button text="Help"  onAction="#showHelpDialog"/>
            </HBox>
        </HBox>
    </top>
    <center>
    </center>
    <left>
        <VBox alignment="CENTER">
            <padding>
                <Insets topRightBottomLeft="30"/>
            </padding>
            <VBox spacing="20" alignment="CENTER" style="-fx-border-style: solid; -fx-border-color: grey; -fx-border-radius:10;">
                <padding>
                    <Insets topRightBottomLeft="20" />
                </padding>
                <VBox spacing="15">
                    <HBox spacing="15">
                        <RadioButton fx:id="allAppointments" text="All Appointments" selected="true" onAction="#handleAppointmentListChange">
                            <toggleGroup>
                                <ToggleGroup fx:id="appointmentFilter"   />
                            </toggleGroup>>
                        </RadioButton>
                        <RadioButton fx:id="pastAppointments" text="Past Appointments" onAction="#handleAppointmentListChange">
                            <toggleGroup>
                                <fx:reference source="appointmentFilter" />
                            </toggleGroup>
                        </RadioButton>
                    </HBox>
                    <HBox spacing="15">
                        <RadioButton fx:id="todayAppointments" text="Today" onAction="#handleAppointmentListChange">
                            <toggleGroup>
                                <fx:reference source="appointmentFilter" />
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="weekAppointments" text="This Week" onAction="#handleAppointmentListChange">
                            <toggleGroup>
                                <fx:reference source="appointmentFilter" />
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="monthAppointments" text="This Month" onAction="#handleAppointmentListChange">
                            <toggleGroup>
                                <fx:reference source="appointmentFilter" />
                            </toggleGroup>
                        </RadioButton>
                    </HBox>


                </VBox>
                <TableView fx:id="appointmentTable" prefHeight="500" prefWidth="350">
                    <columns>
                        <TableColumn text="Appointment ID" fx:id="appointmentId" />
                        <TableColumn text="Title" fx:id="title"/>
                        <TableColumn text="Description" fx:id="description" />
                        <TableColumn text="Location" fx:id="appointmentLocation"/>
                        <TableColumn text="Contact Name" fx:id="contact"/>
                        <TableColumn text="Type" fx:id="type"/>
                        <TableColumn text="Start Date and Time" fx:id="startTime"/>
                        <TableColumn text="End Date and Time" fx:id="endTime"/>
                        <TableColumn text="Customer ID" fx:id="customerId"/>
                    </columns>
                </TableView>
                <HBox spacing="30" alignment="CENTER">
                    <padding>
                        <Insets top="10" bottom="10"/>
                    </padding>
                    <Button text="Add" fx:id="addAppointmentButton" onAction="#changeScene"/>
                    <Button text="Edit" fx:id="editAppointmentButton" onAction="#changeScene"/>
                    <Button text="View"  fx:id="viewAppointmentButton" onAction="#changeScene"/>
                    <Button text="Delete"  fx:id="deleteAppointmentButton" onAction="#deleteAppointment"/>
                </HBox>
            </VBox>
        </VBox>
    </left>

</BorderPane>
